# Handle static assets first
/app/assets/*  /app/assets/:splat  200
/assets/*  /assets/:splat  200
/static/*  /static/:splat  200
/images/*  /images/:splat  200

# Handle SPA routing for the React app - all paths under /app/ should serve the app index.html
/app/*  /app/index.html  200

# Special redirects
/login  /app/login  301

# Handle root SPA routing
/*  /index.html  200